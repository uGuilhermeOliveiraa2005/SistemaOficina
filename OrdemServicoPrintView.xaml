<Window x:Class="SistemaOficina.OrdemServicoPrintView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaOficina"
        xmlns:helpers="clr-namespace:SistemaOficina.Helpers"
        mc:Ignorable="d"
        Title="Visualizar Impressão - Ordem de Serviço"  
        Width="794" Height="1123"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        FontFamily="Arial"
        FontSize="12"
        Background="White"
        Foreground="#000000">

    <Window.Resources>
        <helpers:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageConverter" />

        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="#E8E8E8" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,0,0,1">
                                    <ContentPresenter ContentSource="Header" Margin="4"
                                                      TextBlock.FontWeight="Bold" TextBlock.FontSize="12"
                                                      TextBlock.TextAlignment="Center"/>
                                </Border>
                                <ContentPresenter Grid.Row="1" ContentSource="Content" Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Margin" Value="0,3,0,1"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="DataStyle">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid x:Name="PrintableArea" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="{Binding Configuracao.Logo, Converter={StaticResource ByteArrayToImageConverter}}" 
                           Stretch="Uniform" MaxHeight="70" MaxWidth="120" Margin="5,0,15,0" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Configuracao.NomeEmpresa}" FontSize="20" FontWeight="Bold"/>
                        <TextBlock FontSize="10">
                            <Run Text="{Binding Configuracao.Endereco}"/>
                            <Run Text="| CNPJ:" FontWeight="SemiBold"/>
                            <Run Text="{Binding Configuracao.CpfCnpj}"/>
                            <Run Text="| Telefone:" FontWeight="SemiBold"/>
                            <Run Text="{Binding Configuracao.Telefone}"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,0,5,0">
                        <TextBlock Text="Ordem de Serviço" FontWeight="Bold" HorizontalAlignment="Center" FontSize="10"/>
                        <TextBlock Text="{Binding OS.NumeroOS}" FontSize="28" FontWeight="ExtraBold" HorizontalAlignment="Center"/>

                        <Grid Margin="0,5,0,0" HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Entrada:" FontSize="10" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding OS.DataAbertura, StringFormat='dd/MM/yyyy'}" FontSize="10" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Saída:" FontSize="10" FontWeight="Bold" Margin="0,2,5,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DataImpressao, StringFormat='dd/MM/yyyy HH:mm'}" FontSize="10" VerticalAlignment="Center" Margin="0,2,0,0"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Grid.Column="0" Header="DADOS DO CLIENTE">
                    <StackPanel>
                        <TextBlock Text="NOME" Style="{StaticResource LabelStyle}" Margin="5,3,0,1"/>
                        <TextBlock Text="{Binding NomeClienteDisplay}" Style="{StaticResource DataStyle}" Margin="5,0,0,8"/>
                        <TextBlock Text="ENDEREÇO" Style="{StaticResource LabelStyle}" Margin="5,3,0,1"/>
                        <TextBlock Text="{Binding EnderecoCompleto}" Style="{StaticResource DataStyle}" Margin="5,0,0,8"/>
                        <TextBlock Text="TELEFONE(S)" Style="{StaticResource LabelStyle}" Margin="5,3,0,1"/>
                        <TextBlock Text="{Binding TelefoneCompleto}" Style="{StaticResource DataStyle}" Margin="5,0,0,5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="1" Grid.Column="0" Header="DEFEITO ALEGADO E OBSERVAÇÕES">
                    <TextBlock Text="{Binding OS.DefeitoReclamado}" Style="{StaticResource DataStyle}" Margin="5,8,5,5" TextWrapping="Wrap"/>
                </GroupBox>

                <GroupBox Grid.Row="0" Grid.Column="2" Header="DADOS DO EQUIPAMENTO">
                    <StackPanel>
                        <TextBlock Text="EQUIPAMENTO" Style="{StaticResource LabelStyle}" Margin="5,3,0,1"/>
                        <TextBlock Text="{Binding OS.Aparelho}" Style="{StaticResource DataStyle}" Margin="5,0,0,8"/>
                        <TextBlock Text="MARCA / MODELO" Style="{StaticResource LabelStyle}" Margin="5,3,0,1"/>
                        <TextBlock Style="{StaticResource DataStyle}" Margin="5,0,0,8">
                            <Run Text="{Binding OS.MarcaEquipamento}"/><Run Text=" - "/><Run Text="{Binding OS.ModeloEquipamento}"/>
                        </TextBlock>
                        <TextBlock Text="NÚMERO DE SÉRIE" Style="{StaticResource LabelStyle}" Margin="5,3,0,1"/>
                        <TextBlock Text="{Binding OS.NumeroSerie}" Style="{StaticResource DataStyle}" Margin="5,0,0,5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="1" Grid.Column="2" Header="LAUDO TÉCNICO E SERVIÇOS EXECUTADOS">
                    <TextBlock Text="{Binding OS.ServicoExecutado}" Style="{StaticResource DataStyle}" Margin="5,8,5,5" TextWrapping="Wrap"/>
                </GroupBox>
            </Grid>

            <StackPanel Grid.Row="2" VerticalAlignment="Bottom" Margin="0,10,0,0">
                <GroupBox Header="TERMO DE RESPONSABILIDADE E GARANTIA" BorderBrush="Black" BorderThickness="2" Background="#F0F0F0">
                    <TextBlock TextWrapping="Wrap" FontSize="11" TextAlignment="Justify" Margin="5">
                        <Run FontWeight="Bold">GARANTIA:</Run> A garantia para o serviço executado é de 90 (noventa) dias, cobrindo apenas as peças e a mão de obra especificadas nesta OS. A garantia não cobre danos por mau uso, quedas, líquidos, surtos elétricos ou intervenção de terceiros.
                        <LineBreak/><LineBreak/>
                        <Run FontWeight="Bold">RESPONSABILIDADE:</Run> A empresa não se responsabiliza por outros defeitos não relatados, pré-existentes ou por perda de dados. Equipamentos não retirados em até 90 dias após a comunicação de conclusão serão considerados abandonados para fins de ressarcimento de despesas, conforme Art. 609 do Código Civil.
                    </TextBlock>
                </GroupBox>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,20,0">
                        <Border BorderBrush="Black" BorderThickness="0,1,0,0" Height="1" Margin="0,35,0,2" />
                        <TextBlock Text="Assinatura da Empresa" FontSize="9" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="20,0,0,0">
                        <Border BorderBrush="Black" BorderThickness="0,1,0,0" Height="1" Margin="0,35,0,2" />
                        <TextBlock Text="Assinatura do Cliente (Ciente dos Termos)" FontSize="9" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Bottom">
                        <TextBlock Text="TÉCNICO RESPONSÁVEL:" Style="{StaticResource LabelStyle}" FontSize="8"/>
                        <TextBlock Text="{Binding OS.TecnicoResponsavel}" Style="{StaticResource DataStyle}" MinHeight="18" FontSize="11"/>
                    </StackPanel>

                    <Border Grid.Column="1" BorderBrush="Black" BorderThickness="2" Padding="8,5" MinWidth="220">
                        <StackPanel>
                            <TextBlock Text="VALOR TOTAL" HorizontalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="{Binding OS.Valor, StringFormat=C, ConverterCulture=pt-BR}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,2,0,2"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>

        <StackPanel x:Name="ButtonPanel" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="15">
            <Button x:Name="btnPrint" Click="btnPrint_Click" Padding="15,8" Cursor="Hand" Background="#27AE60" Foreground="White" FontWeight="Bold" BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE749;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Imprimir"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnClose" Click="btnClose_Click" Padding="15,8" Cursor="Hand" Background="#7F8C8D" Foreground="White" FontWeight="Bold" BorderThickness="0" Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Fechar"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>