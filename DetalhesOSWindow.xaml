<Window x:Class="SistemaOficina.DetalhesOSWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaOficina"
        mc:Ignorable="d"
        Title="Detalhes da Ordem de Serviço" 
        MinWidth="700"
        Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Background="#F4F6F7"
        SizeToContent="Height" 
        MaxHeight="720">

    <Window.Resources>
        <Style TargetType="Button" x:Key="BaseButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="30,12"/>
            <Setter Property="Margin" Value="10,20,0,0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="FecharButton" BasedOn="{StaticResource BaseButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#3498DB"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
        </Style>

        <Style TargetType="Button" x:Key="PrintButton" BasedOn="{StaticResource BaseButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#27AE60"/>
            <Setter Property="BorderBrush" Value="#27AE60"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style x:Key="DataStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style x:Key="LongDataStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="26" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2C3E50">
            <Run Text="Detalhes da OS Nº"/>
            <Run Text="{Binding NumeroOS}" FontWeight="Normal"/>
        </TextBlock>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>

                <TextBlock Style="{StaticResource SectionTitle}" Text="Informações Gerais"/>
                <Separator Background="#E0E0E0"/>
                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Cliente:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DataStyle}" Text="{Binding NomeClienteDisplay}" FontWeight="SemiBold" Margin="0,5,25,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Técnico:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DataStyle}" Text="{Binding TecnicoResponsavel}" Margin="0,5,25,5"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelStyle}" Text="Abertura:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Style="{StaticResource DataStyle}" Text="{Binding DataAbertura, StringFormat='dd/MM/yyyy HH:mm'}" Margin="0,5,0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource LabelStyle}" Text="Fechamento:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Style="{StaticResource DataStyle}" Text="{Binding DataFechamento, StringFormat='dd/MM/yyyy HH:mm', TargetNullValue='-'}" Margin="0,5,0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Style="{StaticResource LabelStyle}" Text="Status:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Style="{StaticResource DataStyle}" Text="{Binding Status}" Foreground="#2ECC71" FontWeight="Bold" Margin="0,5,0,5"/>

                    <TextBlock Grid.Row="3" Grid.Column="2" Style="{StaticResource LabelStyle}" Text="Valor Total:" Margin="0,5,15,5" FontSize="14"/>
                    <TextBlock Grid.Row="3" Grid.Column="3" Style="{StaticResource DataStyle}" Text="{Binding Valor, StringFormat=C, ConverterCulture=pt-BR}" FontWeight="Bold" Foreground="#16A085" FontSize="16" Margin="0,5,0,5"/>
                </Grid>

                <TextBlock Style="{StaticResource SectionTitle}" Text="Detalhes do Equipamento"/>
                <Separator Background="#E0E0E0"/>
                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Aparelho:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DataStyle}" Text="{Binding Aparelho}" Margin="0,5,25,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Marca:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DataStyle}" Text="{Binding MarcaEquipamento}" Margin="0,5,25,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Modelo:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DataStyle}" Text="{Binding ModeloEquipamento}" Margin="0,5,25,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelStyle}" Text="Nº de Série:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource DataStyle}" Text="{Binding NumeroSerie}" Margin="0,5,25,5"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelStyle}" Text="Cor:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Style="{StaticResource DataStyle}" Text="{Binding Cor}" Margin="0,5,0,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource LabelStyle}" Text="Voltagem:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Style="{StaticResource DataStyle}" Text="{Binding Voltagem}" Margin="0,5,0,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Style="{StaticResource LabelStyle}" Text="Departamento:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Style="{StaticResource DataStyle}" Text="{Binding Departamento}" Margin="0,5,0,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Style="{StaticResource LabelStyle}" Text="Garantia:" Margin="0,5,15,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="3" Style="{StaticResource DataStyle}" Text="{Binding Garantia}" Margin="0,5,0,5"/>
                </Grid>

                <TextBlock Style="{StaticResource SectionTitle}" Text="Relatos e Observações"/>
                <Separator Background="#E0E0E0"/>
                <StackPanel Margin="0,10,0,10">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="DEFEITO ALEGADO (CLIENTE)"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,5,0,10" MinHeight="80">
                        <TextBlock Style="{StaticResource LongDataStyle}" Text="{Binding DefeitoReclamado}"/>
                    </Border>

                    <TextBlock Style="{StaticResource LabelStyle}" Text="DEFEITOS VISÍVEIS (LAUDO INICIAL)"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,5,0,10" MinHeight="80">
                        <TextBlock Style="{StaticResource LongDataStyle}" Text="{Binding DefeitosVisiveis}"/>
                    </Border>

                    <TextBlock Style="{StaticResource LabelStyle}" Text="COMPLEMENTO / ACESSÓRIOS"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,5,0,10" MinHeight="60">
                        <TextBlock Style="{StaticResource LongDataStyle}" Text="{Binding Complemento}"/>
                    </Border>

                    <TextBlock Style="{StaticResource LabelStyle}" Text="OBSERVAÇÃO"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,5,0,10" MinHeight="60">
                        <TextBlock Style="{StaticResource LongDataStyle}" Text="{Binding Observacao}"/>
                    </Border>
                </StackPanel>

                <TextBlock Style="{StaticResource SectionTitle}" Text="Diagnóstico Técnico e Solução"/>
                <Separator Background="#E0E0E0"/>
                <StackPanel Margin="0,10,0,10">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="DEFEITO REAL (DIAGNÓSTICO)"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,5,0,10" MinHeight="80">
                        <TextBlock Style="{StaticResource LongDataStyle}" Text="{Binding DefeitoReal}"/>
                    </Border>

                    <TextBlock Style="{StaticResource LabelStyle}" Text="SERVIÇO EXECUTADO"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,5,0,10" MinHeight="80">
                        <TextBlock Style="{StaticResource LongDataStyle}" Text="{Binding ServicoExecutado}"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnImprimirPreview" 
                    Content="Visualizar Impressão" 
                    Click="btnImprimirPreview_Click" 
                    Style="{StaticResource PrintButton}"/>

            <Button Content="Fechar" 
                    Click="Fechar_Click" 
                    Style="{StaticResource FecharButton}"/>
        </StackPanel>

    </Grid>
</Window>